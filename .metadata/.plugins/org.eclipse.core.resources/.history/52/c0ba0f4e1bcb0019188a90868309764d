public  void registration_product(String prod_name,String prod_des,String cat_id,InputStream inputStream) {
	try {
		String querry ="INSERT INTO `product` (`product_id`, `product_name`, `product_description`, `image`, `category_id`) VALUES (NULL, '"+prod_name+"', '"+prod_des+"', ?, '"+cat_id+"')";
		
        st=con.obtenirconnexion().prepareStatement(querry);
        st.setBlob(1, inputStream);
        st.executeUpdate();
        System.out.println("produc add");
	}
	catch(Exception e){
	System.out.println("erro"+e);
	e.printStackTrace();
	}
    
	
}

					
	

